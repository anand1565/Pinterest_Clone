<% include ./partials/header.ejs %>
    <div class="w-full min-h-screen text-white px-10 py-5 bg-zinc-800">
        <h1 class="text-xl font-semibold">Create New Post</h1>
        <hr class="opacity-10 mt-3">
        <form action="/createpost" method="post" enctype="multipart/form-data">
            <input type="file" name="postImage" class="block w-1/3 px-3 py2 my-2">
            <input type="text" name="title" class="text-black block w-1/3 px-3 py2 my-2 rounded-md" placeholder="Title">
            <textarea type="text" name="description" class="text-black block w-1/3 px-3 h-60 py2 my-2 rounded-md"
                placeholder="Description"></textarea>
            <input type="submit" class="block w-1/3 px-3 py2 bg-red-800 rounded-md cursor-pointer" value="Create Post">
        </form>
    </div>
    <% include ./partials/footer.ejs %>