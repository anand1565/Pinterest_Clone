<% include ./partials/header.ejs %>
    <div
        class="w-full h-screen bg-center bg-cover bg-[url('https://images.unsplash.com/photo-1636044594149-6e2f289c3868?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] flex items-center justify-center">
        <div class="w-[30vw] shadow-2xl bg-white px-10 py-10 rounded-[30px]">
            <h1 class="text-3xl text-center text-zinc-500 tracking-tight leading-none font-bold capitalize ">Create new
                Account</h1>
            <form action="/register" method="post">
                <label class="mt-2 inline-block" for="email">Email</label>
                <input class="block border-2 w-full mt-2 px-3 py-2 rounded-full" type="email" name="email"
                    placeholder="Email">
                <label for="name">Full Name</label>
                <input class="block border-2 w-full mt-2 px-3 py-2 rounded-full" type="text" name="name"
                    placeholder="Full name">
                <label for="username">Username</label>
                <input class="block border-2 w-full mt-2 px-3 py-2 rounded-full" type="text" name="username"
                    placeholder="Username">
                <label for="password">Password</label>
                <input class="block border-2 w-full mt-2 px-3 py-2 rounded-full" type="password" name="password"
                    placeholder="Password">
                <label for="contact">Contact Number</label>
                <input class="block border-2 w-full mt-2 px-3 py-2 rounded-full" type="tel" minlength="10"
                    maxlength="10" name="contact" placeholder="Contact Number">
                <input class="block border-2 w-full mt-5 px-3 py-2 bg-red-600 text-white rounded-full" type="submit"
                    value="Sign Up">
                <p class="text-xs text-zinc-700 mt-4 w-3/4 mx-auto text-center">By continuing, you agree to Pinterest's
                    Terms of
                    Service and acknowledge you've read our Privacy
                    Policy. Notice at collection.</p>
            </form>
            <a href="/" class="inline-block mt-4 text-sm font-semibold text-zinc-700 text-center w-full">Already
                have an
                account</a>
        </div>
    </div>
    <% include ./partials/footer.ejs %>